---
const { active = "home" } = Astro.props;
---

<nav class="w-screen fixed bg-white z-10 shadow-sm">
  <div class="max-w-[1200px] mx-auto flex items-center justify-between px-4 py-4">
    
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3">
      <img src="/public/img/icon.png" class="w-16" alt="LuciTara Logo" />
      <div class="leading-none">
        <div class="text-[28px] font-semibold text-[var(--blue)] leading-[1.05]">LuciTara</div>
        <div class="flex items-end gap-2 -mt-1">
          <span class="text-[20px] font-semibold text-[var(--blue)] leading-[1.05]">Por ellos</span>
          <span class="text-[10px] text-[var(--blue)]/80 mb-1">Cuidando vidas</span>
        </div>
      </div>
    </a>

    <!-- Menu Mobile Toggle -->
    <div class="md:hidden">
      <input type="checkbox" id="menu-toggle" class="hidden peer" />
      <label for="menu-toggle" class="cursor-pointer flex flex-col w-6 h-5 justify-between">
        <span class="block h-0.5 w-full bg-[var(--blue)] transition-all peer-checked:rotate-45 peer-checked:translate-y-2.5"></span>
        <span class="block h-0.5 w-full bg-[var(--blue)] transition-all peer-checked:opacity-0"></span>
        <span class="block h-0.5 w-full bg-[var(--blue)] transition-all peer-checked:-rotate-45 peer-checked:-translate-y-2.5"></span>
      </label>
    </div>

    <!-- Links Desktop -->
    <div class="hidden md:flex items-center gap-8 text-[15px] text-gray-700">
      <a href="#inicio" class="py-2 hover:text-[var(--green)] transition">Inicio</a>
      <a href="#mision" class="py-2 hover:text-[var(--green)] transition">Misi贸n</a>
      <a href="#ayuda" class="py-2 hover:text-[var(--green)] transition">Ayuda</a>
      <a href="/contact" class="py-2 hover:text-[var(--green)] transition">Impacto</a>
    </div>

    <!-- Buttons Desktop -->
    <div class="hidden sm:flex items-center gap-4">
      <a href="/services" class="inline-flex items-center gap-3 rounded-md bg-[var(--light-green)] px-5 py-2.5 text-[var(--blue)] font-medium shadow hover:opacity-90">
        C贸mo Ayudar
        <svg viewBox="0 0 24 24" class="h-5 w-5 fill-current">
          <path d="M13.172 12l-4.95-4.95 1.414-1.414L16 12l-6.364 6.364-1.414-1.414z"></path>
        </svg>
      </a>
      <a href="/contact" class="inline-flex items-center gap-3 rounded-md bg-[var(--blue)] px-5 py-2.5 text-[var(--cream)] font-medium shadow hover:opacity-90">
        Haz la Diferencia
        <svg viewBox="0 0 24 24" class="h-5 w-5 fill-current">
          <path d="M13.172 12l-4.95-4.95 1.414-1.414L16 12l-6.364 6.364-1.414-1.414z"></path>
        </svg>
      </a>
    </div>

  </div>

  <!-- Menu Mobile -->
  <div class="peer-checked:flex hidden flex-col md:hidden bg-white border-t border-black/10 px-4 py-6 gap-4">
    <a href="#inicio" class="py-2 hover:text-[var(--green)] transition">Inicio</a>
    <a href="#mision" class="py-2 hover:text-[var(--green)] transition">Misi贸n</a>
    <a href="#ayuda" class="py-2 hover:text-[var(--green)] transition">Ayuda</a>
    <a href="/contact" class="py-2 hover:text-[var(--green)] transition">Impacto</a>

    <a href="/services" class="inline-flex items-center gap-3 rounded-md bg-[var(--light-green)] px-5 py-2.5 text-[var(--blue)] font-medium shadow hover:opacity-90">
      C贸mo Ayudar
    </a>
    <a href="/contact" class="inline-flex items-center gap-3 rounded-md bg-[var(--blue)] px-5 py-2.5 text-[var(--cream)] font-medium shadow hover:opacity-90">
      Haz la Diferencia
    </a>
  </div>
</nav>
